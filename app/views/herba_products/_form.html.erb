<% if @product.errors.any? %>
	<div id="error_explanation">
		<%= t("general.form_error") %>
	</div>
<% end %>

<section class="content">
	<div class="row">
		<div class="col-md-6">
			<div class="box box-primary">
				<div class="box-header">
					<h3 class="box-title"><%= t("title.product") %></h3>
				</div>
				<%= form_for @product do |f| %>
					<div class="box-body">
						<div class="form-group">
							<div class="input-group">
								<div class="input-group-addon">
									<i class="fa fa-caret-square-o-down"></i>
								</div>
								<%= f.select :herba_category_id, options_from_collection_for_select(get_herba_categories, "id", "name", @product.herba_category_id), {}, class: "form-control" %>
							</div>
						</div>
						<div class="form-group">
							<div class="input-group">
								<div class="input-group-addon">
									<i class="fa fa-file-text-o"></i>
								</div>
								<%= f.text_field :code, class: "form-control", placeholder: t("placeholder.code") %>
								<%= error_tag @product, :code %>
							</div>
						</div>
						<div class="form-group">
							<div class="input-group">
								<div class="input-group-addon">
									<i class="fa fa-file-text-o"></i>
								</div>
								<%= f.text_field :name, class: "form-control", placeholder: t("placeholder.name") %>
								<%= error_tag @product, :name %>
							</div>
						</div>
						<div class="form-group">
							<div class="input-group">
								<div class="input-group-addon">
									<i class="fa fa-money"></i>
								</div>
								<%= f.text_field :price, class: "form-control", placeholder: t("placeholder.money_example") %>
								<%= error_tag @product, :price %>
							</div>
						</div>
						<div class="form-group">
							<div class="input-group">
								<div class="input-group-addon">
									<i class="fa fa-retweet"></i>
								</div>
								<%= f.text_field :portion, class: "form-control", placeholder: t("placeholder.portion") %>
								<%= error_tag @product, :portion %>
							</div>
						</div>
					</div>
					<div class="box-footer">
						<%= f.submit button_name, class: "btn btn-primary" %>
	        </div>
				<% end %>
			</div>
		</div>
	</div>
</section>
