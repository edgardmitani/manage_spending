<section class="content">
	<div class="row">
		<div class="col-xs-12">
			<div class="box">
				<div class="box-header">
					<h3 class="box-title"><%= t("title.transactions") %></h3>
					<div class="box-tools">
						<%= link_to t("link.registering"), new_herba_transaction_path, class: "btn-register btn-default pull-right" %>
					</div>
				</div>
				<div class="box-body table-responsive no-padding">
					<table class="table table-striped">
						<tr>
							<th><%= t("table.description") %></th>
							<th><%= t("table.mode") %></th>
							<th><%= t("table.value") %></th>
							<th colspan="2"></th>
						</tr>
						<% @transactions.each do |transaction| %>
							<tr>
								<td><%= transaction.description %></td>
								<td><%= transaction.mode %></td>
								<td><%= format_money(transaction.value) %></td>
								<td><%= link_to "", edit_herba_transaction_path(transaction), class: "fa fa-edit", title: t("link.edit") %></td>
								<td><%= link_to "", transaction, method: :delete, data: { confirm: t("flash_message.are_you_sure") }, class: "fa fa-trash-o", title: t("link.delete") %></td>
							</tr>
						<% end %>
					</table>
					<div class="box-footer clearfix">
						<div class="pagination pagination-sm no-margin pull-right">
							<%= will_paginate @transactions %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
