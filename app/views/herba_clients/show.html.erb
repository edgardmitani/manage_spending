<section class="content">
	<div class="row">
		<div class="col-md-6">
			<div class="box box-primary">
				<div class="box-header">
					<h3 class="box-title"><%= t("title.client") %></h3>
				</div>
				<div class="box-body">
					<div class="form-group">
						<div class="input-group">
							<div class="input-group-addon">
								<i class="fa fa-file-text-o"></i>
							</div>
							<%= text_field_tag :name, @client.name, class: "form-control", disabled: true %>
						</div>
					</div>
					<div class="form-group">
						<div class="input-group">
							<div class="input-group-addon">
								<i class="fa fa-envelope"></i>
							</div>
							<%= text_field_tag :email, @client.email, class: "form-control", disabled: true %>
						</div>
					</div>
					<div class="form-group">
						<div class="input-group">
							<div class="input-group-addon">
								<i class="fa fa-phone"></i>
							</div>
							<%= text_field_tag :phone, @client.phone, class: "form-control", disabled: true %>
						</div>
					</div>
					<% if @client.herba_address %>
						<div class="box-header">
							<h3 class="box-title"><%= t("title.address") %></h3>
						</div>
						<div class="form-group">
							<div class="input-group">
								<div class="input-group-addon">
									<i class="fa fa-map-marker"></i>
								</div>
								<%= text_field_tag :zip_code, @client.herba_address.zip_code, class: "form-control", disabled: true %>
							</div>
						</div>
						<div class="form-group">
							<div class="input-group">
								<div class="input-group-addon">
									<i class="fa fa-map-marker"></i>
								</div>
								<%= text_field_tag :street, @client.herba_address.street, class: "form-control", disabled: true %>
							</div>
						</div>
						<div class="form-group">
							<div class="input-group">
								<div class="input-group-addon">
									<i class="fa fa-map-marker"></i>
								</div>
								<%= text_field_tag :number, @client.herba_address.number, class: "form-control", disabled: true %>
							</div>
						</div>
						<div class="form-group">
							<div class="input-group">
								<div class="input-group-addon">
									<i class="fa fa-map-marker"></i>
								</div>
								<%= text_field_tag :neighborhood, @client.herba_address.neighborhood, class: "form-control", disabled: true %>
							</div>
						</div>
						<div class="form-group">
							<div class="input-group">
								<div class="input-group-addon">
									<i class="fa fa-map-marker"></i>
								</div>
								<%= text_field_tag :city, @client.herba_address.city, class: "form-control", disabled: true %>
							</div>
						</div>
						<div class="form-group">
							<div class="input-group">
								<div class="input-group-addon">
									<i class="fa fa-map-marker"></i>
								</div>
								<%= text_field_tag :state, @client.herba_address.state, class: "form-control", disabled: true %>
							</div>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</section>
