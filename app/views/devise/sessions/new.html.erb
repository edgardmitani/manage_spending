<div class="header"><%= t("box.login") %></div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="body bg-gray">
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, placeholder: "#{t("placeholder.email")}", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, placeholder: "#{t("placeholder.password")}", class: "form-control" %>
    </div>
  </div>
  <div class="footer">    
    <%= f.submit t("button.log_in"), class: "btn bg-olive btn-block" %>
  </div>
<% end %>
